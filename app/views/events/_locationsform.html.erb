<div class="new-location-form">
<%= form_for(@location) do |q| %>
  <div class="field">
    <%= q.label :name, "Name" %><br>
    <%= q.text_field :name %>
  </div>

  <div class="field">
    <%= q.label :description, "Description" %><br>
    <%= q.text_field :description %>
  </div>

  <div class="field">
    <%= q.label :street_address, "Address" %><br>
    <%= q.text_field :street_address %>
  </div>

  <div class="field">
    <%= q.hidden_field :user_id, :value => current_user.id %>
  </div>

  <div class="field">
    <%= q.hidden_field :event_id, :value => @event.id %>
  </div>

  <div class="field">
    <%= q.label :city, "City" %><br>
    <%= q.text_field :city %>
  </div>

  <div class="field">
    <%= q.label :state, "State" %><br>
    <%= q.text_field :state %>
  </div>

  <div class="actions">
    <%= q.submit "Add New Location", class:"submit-button"%>
  </div>
<% end %>
</div>
